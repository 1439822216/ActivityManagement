<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity">

    <TextView
        android:id="@+id/tv_edit_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动发布"
        android:textColor="@color/colorPrimary"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012" />

    <TextView
        android:id="@+id/tv_edit_aName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="活动名称："
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_edit_aOpenTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_top"
        app:layout_constraintVertical_bias="0.050000012" />

    <EditText
        android:id="@+id/ed_edit_aName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_edit_aName"
        app:layout_constraintStart_toEndOf="@+id/tv_edit_aName" />

    <TextView
        android:id="@+id/tv_edit_aOpenTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text="开始时间："
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_edit_aEndTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_aName"
        app:layout_constraintVertical_bias="0.25" />

    <EditText
        android:id="@+id/ed_edit_aOpenTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_edit_aOpenTime"
        app:layout_constraintStart_toEndOf="@+id/tv_edit_aOpenTime" />

    <EditText
        android:id="@+id/ed_edit_aEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"

        app:layout_constraintBaseline_toBaselineOf="@+id/tv_edit_aEndTime"
        app:layout_constraintStart_toEndOf="@+id/tv_edit_aEndTime" />

    <TextView
        android:id="@+id/tv_edit_aEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束时间："
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_edit_aPlace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_aOpenTime"
        app:layout_constraintVertical_bias="0.32999998" />

    <TextView
        android:id="@+id/tv_edit_aPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动地点："
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_edit_aInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_aEndTime"
        app:layout_constraintVertical_bias="0.41000003" />

    <EditText
        android:id="@+id/ed_edit_aPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_edit_aPlace"
        app:layout_constraintStart_toEndOf="@+id/tv_edit_aPlace" />

    <TextView
        android:id="@+id/tv_edit_aInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动信息："
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ed_edit_aInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_aPlace" />

    <EditText
        android:id="@+id/ed_edit_aInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:background="@android:drawable/alert_light_frame"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine|textPersonName"
        android:scrollHorizontally="false"
        android:singleLine="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_aInfo"
        app:layout_constraintVertical_bias="0.58000004" />

    <Button
        android:id="@+id/btn_edit_Release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="发布"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_edit_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.766"
        app:layout_constraintStart_toEndOf="@+id/tv_edit_top" />
</android.support.constraint.ConstraintLayout>