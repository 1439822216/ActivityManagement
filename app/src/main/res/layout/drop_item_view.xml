<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_drop_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_drop_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:scaleType="fitXY"
            android:layout_weight="8" />

        <TextView
            android:id="@+id/tv_drop_status"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textColor="@android:color/holo_blue_dark" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_drop_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/tv_drop_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="7dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_drop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_drop_title"
            android:layout_marginBottom="3dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_drop_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_below="@id/tv_drop_name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_drop_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_drop_time"
            android:layout_marginBottom="3dp"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/rv_drop_bottom"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_drop_update"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:text="修改" />

            <Button
                android:id="@+id/btn_drop_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_red_light"
                android:text="删除" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
